{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CountryRanking",
  "type": "object",
  "properties": {
    "best_options": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "country": { "type": "string" },
          "score": { "type": "number" },
          "reason": { "type": "string" }
        },
        "required": ["country", "score"]
      }
    },
    "acceptable": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "country": { "type": "string" },
          "score": { "type": "number" },
          "reason": { "type": "string" }
        },
        "required": ["country", "score"]
      }
    },
    "not_recommended": {
      "type": "array",
      "items": { "type": "string" }
    },
    "scores": {
      "type": "object",
      "additionalProperties": { "type": "number" }
    }
  },
  "required": ["best_options", "scores"]
}
