{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "UserProfile",
  "type": "object",
  "properties": {
    "age": {
      "type": "integer",
      "minimum": 0,
      "maximum": 100
    },
    "citizenship": {
      "type": "string"
    },
    "marital_status": {
      "type": "string",
      "enum": ["single", "married", "divorced", "widowed"]
    },
    "education_level": {
      "type": "string",
      "enum": ["high_school", "diploma", "bachelor", "master", "phd"]
    },
    "field_of_study": {
      "type": "string"
    },
    "english_score": {
      "type": "number",
      "minimum": 0,
      "maximum": 9
    },
    "english_level": {
      "type": "string",
      "enum": ["A1", "A2", "B1", "B2", "C1", "C2"]
    },
    "german_level": {
      "type": "string",
      "enum": ["none", "a1", "a2", "b1", "b2", "c1", "c2"]
    },
    "french_level": {
      "type": "string",
      "enum": ["none", "a1", "a2", "b1", "b2", "c1", "c2"]
    },
    "funds_usd": {
      "type": "number",
      "minimum": 0
    },
    "work_experience_years": {
      "type": "number",
      "minimum": 0
    },
    "goal": {
      "type": "string",
      "enum": ["Study", "Work", "PR"]
    },
    "target_countries": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "errors": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "required": [
    "age",
    "citizenship",
    "marital_status",
    "education_level",
    "goal"
  ]
}
