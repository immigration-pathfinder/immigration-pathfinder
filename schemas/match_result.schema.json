{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MatchResult",
  "type": "object",
  "properties": {
    "country": { "type": "string" },
    "pathway": {
      "type": "string",
      "enum": ["Study", "Work", "PR"]
    },
    "status": {
      "type": "string",
      "enum": ["OK", "Borderline", "High Risk"]
    },
    "raw_score": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0
    },
    "rule_gaps": {
      "type": "object",
      "properties": {
        "missing_requirements": {
          "type": "array",
          "items": { "type": "string" }
        },
        "risk_status": {
          "type": "string"
        }
      }
    }
  },
  "required": ["country", "pathway", "status", "raw_score"]
}
